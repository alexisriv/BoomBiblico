<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Players"
                android:textSize="30dp"
                android:id="@+id/name_record_item"
                android:textColor="@color/colorBaseNegative"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_timer"
                android:id="@+id/ic_timer"
                android:layout_below="@+id/name_record_item"/>
            <TextView
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="00:00:00"
                android:id="@+id/timer_record_init"
                android:layout_below="@+id/name_record_item"
                android:layout_toRightOf="@+id/ic_timer"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_check"
                android:id="@+id/ic_check"
                android:layout_below="@+id/ic_timer"/>
            <TextView
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="10/10"
                android:layout_toRightOf="@+id/ic_check"
                android:layout_below="@+id/ic_timer"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>